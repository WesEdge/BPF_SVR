<?xml version="1.0" encoding="UTF-8"?>

<web-app
            xmlns="http://java.sun.com/xml/ns/javaee"
            xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
            version="3.0">

    <display-name>www.BigPublicFolder.com</display-name>

    <welcome-file-list>
        <welcome-file>search.html</welcome-file>
    </welcome-file-list>

    <context-param>
        <param-name>UPLOAD_FILE_DIR</param-name>
        <param-value>${bpf.fileDir}</param-value>
    </context-param>

    <context-param>
        <param-name>MONGODB_HOST</param-name>
        <param-value>${bpf.mongoHost}</param-value>
    </context-param>

    <context-param>
        <param-name>MONGODB_PORT</param-name>
        <param-value>${bpf.mongoPort}</param-value>
    </context-param>

</web-app>
